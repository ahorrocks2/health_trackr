<%= render 'layouts/errors', :object => @workout %>

<%= form_for [@user, @workout], :html => {:class => "form-vertical center"} do |f| %>
  <%= f.text_field :name, :placeholder => "Name", class: 'form-control' %>
  <%= f.text_field :cal_burned, :placeholder => "Calories Burned", class: 'form-control' %>
  <%= f.submit "Add Workout" %>
<% end %>
